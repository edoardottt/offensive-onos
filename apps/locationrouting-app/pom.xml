    <artifactId>onos-locationrouting</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>bundle</packaging>

    <description>Test sample application</description>

    <properties>
        <onos.version>2.7.0</onos.version>
        <onos.app.name>org.onosproject.locationrouting</onos.app.name>
        <onos.app.origin>edoardottt</onos.app.origin>
        <onos.app.title>locationrouting App</onos.app.title>
        <onos.app.category>Monitoring</onos.app.category>
        <onos.app.url>http://onosproject.org</onos.app.url>
